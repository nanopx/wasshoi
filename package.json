{
  "name": "wasshoi",
  "description": "Show animated comments on your desktop",
  "version": "0.1.5",
  "license": "MIT",
  "author": "nanopx",
  "repository": {
    "type": "git",
    "url": "git@github.com:nanopx/wasshoi.git"
  },
  "main": "build/main.js",
  "build": {
    "productName": "wasshoi",
    "appId": "com.wasshoi.app",
    "asar": true,
    "npmRebuild": false,
    "files": [
      "package.json",
      "build/**/*",
      "resources/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": [
      {
        "provider": "github",
        "releaseType": "release"
      }
    ]
  },
  "keywords": [
    "Electron",
    "wasshoi",
    "danmaku",
    "niconico",
    "comments",
    "desktop"
  ],
  "scripts": {
    "clean": "rimraf build/*",
    "watch": "cross-env NODE_ENV=\"development\" webpack --hide-modules --watch",
    "build": "cross-env NODE_ENV=\"production\" webpack --hide-modules",
    "serve": "electron .",
    "start": "npm-run-all clean watch",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder",
    "dist-clean": "rimraf \"dist/!(*.exe|*.deb|*.AppImage|*.dmg)\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@slack/rtm-api": "^5.0.1",
    "@slack/web-api": "^5.0.1",
    "dotenv": "^8.0.0",
    "ejs": "^2.7.2",
    "electron-store": "^3.3.0",
    "express": "^4.17.3",
    "express-ws": "^4.0.0",
    "punycode": "^2.1.1",
    "randomcolor": "^0.5.4"
  },
  "devDependencies": {
    "@types/ejs": "^2.6.3",
    "@types/electron-load-devtool": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/express-ws": "^3.0.0",
    "@types/node": "^12.12.7",
    "@types/randomcolor": "^0.5.3",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/styled-components": "^4.1.21",
    "@types/webpack": "^4.39.5",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "bufferutil": "^4.0.1",
    "cross-env": "^6.0.3",
    "electron": "^7.1.1",
    "electron-builder": "^22.1.0",
    "electron-connect": "^0.6.3",
    "electron-load-devtool": "^1.2.0",
    "electron-reload-webpack-plugin": "^2.0.4",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "extract-loader": "^3.1.0",
    "file-loader": "^4.2.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rimraf": "^3.0.0",
    "spawn-sync": "^2.0.0",
    "styled-components": "^4.4.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
